<?xml version="1.0"?>
<action-recipes>
	
	<action-alias id="com.macrabbit.TextActions.XMLHTML.CloseTag.Alias" category="hidden">
	
		<title>Close Tag (HTML)</title>
		<text-trigger key-equivalent="/">&lt;</text-trigger>
		<action-identifier>com.macrabbit.TextActions.CloseTag</action-identifier>
		<syntax-context>html, html *, xml, xml *</syntax-context>
		
	</action-alias>
	
	<snippet id="com.macrabbit.TextActions.XMLHTML.NewTag" category="hidden">
		<title>New Tag</title>
		<text>&lt;${1:tag}>$0&lt;/${1/([a-zA-Z0-9:\-]*).*/\1/}></text>
		<when-disabled>hide</when-disabled>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.XMLHTML.Doctype.html4strict" category="tools.Snippets">
		<title>HTML 4.01 Strict</title>
		<text><![CDATA[<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">]]></text>
		<syntax-context>html, html *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.XMLHTML.Doctype.html4transitional" category="tools.Snippets">
		<title>HTML 4.01 Transitional</title>
		<text><![CDATA[<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">]]></text>
		<syntax-context>html, html *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.XMLHTML.Doctype.xhtml1strict" category="tools.Snippets">
		<title>XHTML 1.0 Strict</title>
		<text><![CDATA[<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">]]></text>
		<syntax-context>html, html *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.XMLHTML.Doctype.xhtml1transitional" category="tools.Snippets">
		<title>XHTML 1.0 Transitional</title>
		<text><![CDATA[<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">]]></text>
		<syntax-context>html, html *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.XMLHTML.Doctype.xhtml11" category="tools.Snippets">
		<title>XHTML 1.1</title>
		<text><![CDATA[<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">]]></text>
		<syntax-context>html, html *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.XMLHTML.Doctype.html5" category="tools.Snippets">
		<title>HTML5</title>
		<text><![CDATA[<!DOCTYPE html>]]></text>
		<syntax-context>html, html *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.XMLHTML.Snippet-CDATA" category="tools.Snippets/XMLHTML">
		<title>CDATA</title>
		<text>&lt;![CDATA[${0:character data}]]&gt;</text>
		<syntax-context>text.xml, text.xml *</syntax-context>
	</snippet>

	<snippet id="com.setup.snippets" category="tools.Snippets">
		<title>Page setup</title>
		<text><![CDATA[<div id="page">
		
	<div id="masthead">
		<div id="identity">
			<h1>${1:Name of company}</h1>
		</div><!-- / #identity -->
		
		<div class="nav">
			<ul>
				<li><a href="#">${2:Home}</a></li>
				<li><a href="#">${3:About}</a></li>
				<li><a href="#">${4:Contact}</a></li>
			</ul>
		</div><!-- / #nav -->
	</div><!-- / #masthead -->
	
	<div id="content">
		
		${5:Insert your content here}$0
		
	</div><!-- / #content -->
	
	<div id="footer">
		<div id="copyright">
			<p>&copy; $1 2010</p>
		</div><!-- / #copyright -->
	</div><!-- / #footer -->
	
</div><!-- / #page -->

]]></text>
		<syntax-context>html, html *</syntax-context>
		<text-trigger>page</text-trigger>
	</snippet>
	
	<!-- Semantic form building blocks --> 
	
	<snippet id="com.semanticform.snippets.for" category="tools.Snippets">
		<title>Semantic Form Builder</title>
		<text><![CDATA[<form action="#" method="post" class="stacked">
	<fieldset>
		<legend class="hide-1">${1:Form legend text}</legend>
		
		<div class="form-block">
			<label for="${2:text_example}">
				<span class="label">
					${3:Label for text input}
				</span>
				<span class="input">
					<input type="text" name="$2" id="$2" class="text" />
				</span>
			</label>
		</div><!-- / .form-block -->
		
		$0
		
	</fieldset>
</form>]]></text>
		<syntax-context>html, html *</syntax-context>
		<text-trigger>sform</text-trigger>
	</snippet>
		
		<snippet id="com.semanticform.snippets.for" category="tools.Snippets">
			<title>Semantic Form Builder</title>
			<text><![CDATA[<form action="#" method="post" class="left-aligned">
	<fieldset>
		<legend class="hide-1">${1:Form legend text}</legend>
		
		<div class="form-block">
			<label for="${2:text_example}">
				<span class="label">
					${3:Label for text input}
				</span>
				<span class="input">
					<input type="text" name="$2" id="$2" class="text" />
				</span>
			</label>
		</div><!-- / .form-block -->
		
		$0
		
	</fieldset>
</form>]]></text>
			<syntax-context>html, html *</syntax-context>
			<text-trigger>sform la</text-trigger>
		</snippet>
		
		<snippet id="com.semanticform.snippets.for" category="tools.Snippets">
			<title>Semantic Form Builder</title>
			<text><![CDATA[<form action="#" method="post" class="right-aligned">
	<fieldset>
		<legend class="hide-1">${1:Form legend text}</legend>
		
		<div class="form-block">
			<label for="${2:text_example}">
				<span class="label">
					${3:Label for text input}
				</span>
				<span class="input">
					<input type="text" name="$2" id="$2" class="text" />
				</span>
			</label>
		</div><!-- / .form-block -->
		
		$0
		
	</fieldset>
</form>]]></text>
			<syntax-context>html, html *</syntax-context>
			<text-trigger>sform ra</text-trigger>
		</snippet>
		
		<snippet id="com.semanticform.snippets.for" category="tools.Snippets">
			<title>Text input</title>
			<text><![CDATA[<div class="form-block">
	<label for="${1:text_example}">
		<span class="label">
			${2:Label for text input}
		</span>
		<span class="input">
			<input type="text" name="$1" id="$1" class="text" />
		</span>
	</label>
</div><!-- / .form-block -->

$0]]></text>
			<syntax-context>html, html *</syntax-context>
			<text-trigger>sf-text</text-trigger>
		</snippet>
		
		<snippet id="com.semanticform.snippets.for" category="tools.Snippets">
			<title>Textarea</title>
			<text><![CDATA[<div class="form-block">
	<label for="${1:textarea_example}">
		<span class="label">
			${2:Label for textarea}
		</span>
		<span class="input">
			<textarea name="$1" id="$1" class="text" rows="${3:number of rows}" cols="${4:number of columns}"></textarea>
		</span>
	</label>
</div><!-- / .form-block -->

$0]]></text>
			<syntax-context>html, html *</syntax-context>
			<text-trigger>sf-textarea</text-trigger>
		</snippet>
		
		<snippet id="com.semanticform.snippets.for" category="tools.Snippets">
			<title>Radio group</title>
			<text><![CDATA[<div class="form-block radio-group">
	<fieldset>
		<legend class="hide-1">${1:Form legend text}</legend>
		
		<span class="label">
			${2:Label for radio button group}
		</span>
		
		<div class="form-block">
			<label for="${3:radio_button_label_1}">
				<span class="input">
					<input type="radio" name="${4:radio_button_group_name}" id="$3" />
				</span>
				<span class="label">
					${5:Label for radio button}
				</span>
			</label>
		</div><!-- / .form-block -->
		
		<div class="form-block">
			<label for="${6:radio_button_label_2">
				<span class="input">
					<input type="radio" name="$4" id="$6" />
				</span>
				<span class="label">
					${7:Label for radio button}
				</span>
			</label>
		</div><!-- / .form-block -->
		
	</fieldset>	
</div><!-- / .form-block.radio-group -->

$0]]></text>
			<syntax-context>html, html *</syntax-context>
			<text-trigger>sf-radio</text-trigger>
		</snippet>
		
		<snippet id="com.semanticform.snippets.for" category="tools.Snippets">
			<title>Checkbox group</title>
			<text><![CDATA[<div class="form-block checkbox-group">
	<fieldset>
		<legend class="hide-1">Make some choices</legend>
		
		<span class="label">
			Checkbox group example
		</span>
		
		<div class="form-block">
			<label for="checkbox-ex1">
				<span class="input">
					<input type="checkbox" name="checkbox-group" id="checkbox-ex1" />
				</span>
				<span class="label">
					Checkbox question 1
				</span>
			</label>
		</div><!-- / .form-block -->
		
		<div class="form-block">
			<label for="checkbox-ex2">
				<span class="input">
					<input type="checkbox" name="checkbox-group" id="checkbox-ex2" />
				</span>
				<span class="label">
					Checkbox question 2
				</span>
			</label>
		</div><!-- / .form-block -->
		
	</fieldset>	
</div><!-- / .form-block.checkbox-group -->]]></text>
			<syntax-context>html, html *</syntax-context>
			<text-trigger>sf-checkbox</text-trigger>
		</snippet>
		
		<snippet id="com.semanticform.snippets.for" category="tools.Snippets">
			<title>Select group</title>
			<text><![CDATA[<div class="form-block">
	<label for="select-group">
		<span class="label">
			Make a selection
		</span>
		<span class="input">
			<select name="select-group" id="select-group">
				<option>Option 1</option>
				<option>Option 2</option>
				<option>Option 3</option>
				<option>Option 4</option>
				<option>Option 5</option>
			</select>
		</span>
	</label>
</div><!-- / .form-block -->]]></text>
			<syntax-context>html, html *</syntax-context>
			<text-trigger>sf-select</text-trigger>
		</snippet>
		
		<snippet id="com.semanticform.snippets.for" category="tools.Snippets">
			<title>Submit button</title>
			<text><![CDATA[<div class="form-block">
	<input type="submit" value="Submit form" class="button" />
</div><!-- / .form-block -->]]></text>
			<syntax-context>html, html *</syntax-context>
			<text-trigger>sf-submit</text-trigger>
		</snippet>
		
		<snippet id="com.semanticform.snippets.for" category="tools.Snippets">
