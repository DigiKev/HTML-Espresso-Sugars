<?xml version="1.0"?>
<action-recipes>

	<snippet id="com.setup.snippets" category="hidden">
		<title>Page setup</title>
		<text><![CDATA[<div id="page">
		
	<div id="masthead">
		<div id="identity">
			<h1>${1:Name of company}</h1>
		</div><!-- / #identity -->
		
		<div class="nav">
			<ul>
				<li><a href="#">${2:Home}</a></li>
				<li><a href="#">${3:About}</a></li>
				<li><a href="#">${4:Contact}</a></li>
			</ul>
		</div><!-- / #nav -->
	</div><!-- / #masthead -->
	
	<div id="content">
		
		${5:Insert your content here}$0
		
	</div><!-- / #content -->
	
	<div id="footer">
		<div id="copyright">
			<p>&copy; $1 2010</p>
		</div><!-- / #copyright -->
	</div><!-- / #footer -->
	
</div><!-- / #page -->

]]></text>
		<syntax-context>html, html *</syntax-context>
		<text-trigger>page</text-trigger>
	</snippet>
		
