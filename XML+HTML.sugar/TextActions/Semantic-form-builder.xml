<?xml version="1.0"?>
<action-recipes>

	<!-- Semantic form building blocks --> 
	
	<snippet id="com.semanticform.snippets.Stackedform" category="hidden">
		<title>Stacked form</title>
		<text><![CDATA[<form action="#" method="post" class="stacked">
	<fieldset>
		<legend class="hide-1">${1:Form legend text}</legend>
		
		<div class="form-block">
			<label for="${2:text-example}">
				<span class="label">
					${3:Label for text input}
				</span>
				<span class="input">
					<input type="text" name="$2" id="$2" class="text" />
				</span>
			</label>
		</div><!-- / .form-block -->
		
		$0
		
	</fieldset>
</form>]]></text>
		<syntax-context>html, html *</syntax-context>
		<text-trigger>sform</text-trigger>
	</snippet>
		
