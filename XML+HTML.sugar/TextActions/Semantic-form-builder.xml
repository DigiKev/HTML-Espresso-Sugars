	<snippet id="com.semanticform.snippets.AddressLocator" category="hidden">
		<title>Address locator</title>
		<text><![CDATA[<div class="form-block">
	<label for="${1:postcode}">
		<span class="label">
			What is your postcode?
		</span>
		<span class="input">
			<input type="text" name="$1" maxlength="8" id="$1" class="text postcode" />
			<input type="submit" value="${2:Expand address}" class="button" />
		</span>
	</label>
</div><!-- / .form-block -->

<div class="form-block inactive">
	<fieldset>
		<legend class="hide-1">${3:Address selection}</legend>
		
		<span class="label">
			${4:Select your address}
		</span>
		
		<div class="select-postcode">
			<ol>
				<li>
					<label for="${5:postcode-selection-01}">
						<input type="radio" name="${6:select-postcode-group}" id="$5" /> ${7:Full address}
					</label>
				</li>
				<li>
					<label for="${8:postcode-selection-02}">
						<input type="radio" name="$6" id="$8" /> ${9:Full address}
					</label>
				</li>
				<li>
					<label for="${10:postcode-selection-03}">
						<input type="radio" name="$6" id="$10" /> ${11:Full address}
					</label>
				</li>
				<li>
					<label for="${12:postcode-selection-04}">
						<input type="radio" name="$6" id="$12" /> ${13:Full address}
					</label>
				</li>
			</ol>
		</div><!-- / .select-postcode -->
		
	</fieldset>
</div><!-- / .form-block -->

<div class="form-block inactive">
	<fieldset>
		<legend class="hide-1">${14:Ensure address is correct}</legend>
		
		<span class="label">
			${15:Check the output of your chosen address, editing where appropriate}
		</span>
		
		<div class="form-block">
			<label for="${16:first-line-address}">
				<span class="label">
					${17:First line of address}
				</span>
				<span class="input">
					<input type="text" name="$16" id="$16" class="text" />
				</span>
			</label>
		</div><!-- / .form-block -->
		
		<div class="form-block">
			<label for="${18:second-line-address}">
				<span class="label">
					${19:Second line of address} <small>(optional)</small>
				</span>
				<span class="field">
					<input type="text" name="$18" id="$18" class="text" />
				</span>
			</label>
		</div><!-- / .form-block -->
		
		<div class="form-block">
			<label for="${20:town}">
				<span class="label">
					${21:Town/City}
				</span>
				<span class="field">
					<input type="text" name="$20" id="$20" class="text" />
				</span>
			</label>
		</div><!-- / .form-block -->
		
	</fieldset>
</div><!-- / .form-block -->

$0]]></text>
		<syntax-context>html, html *</syntax-context>
		<text-trigger>address-locator</text-trigger>
	</snippet>
	
