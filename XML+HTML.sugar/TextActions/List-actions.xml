<?xml version="1.0"?>
<action-recipes>

	<snippet id="com.lists.snippets.UnorderedLists" category="hidden">
		<title>Unordered list</title>
		<text><![CDATA[<ul>
	<li>${1:List item}</li>
	<li>${2:List item}</li>
</ul>]]></text>
		<syntax-context>html, html *</syntax-context>
		<text-trigger><![CDATA[<ul>]]></text-trigger>
	</snippet>
	
	<snippet id="com.lists.snippets.OrderedLists" category="hidden">
		<title>Ordered list</title>
		<text><![CDATA[<ol>
	<li>${1:List item}</li>
	<li>${2:List item}</li>
</ol>]]></text>
		<syntax-context>html, html *</syntax-context>
		<text-trigger><![CDATA[<ol>]]></text-trigger>
	</snippet>
	
	<snippet id="com.lists.snippets.DefinitionLists" category="hidden">
		<title>Definition list</title>
		<text><![CDATA[<dl>

	<dt>${1:Definition title}</dt>
	<dd>${2:Definition description}</dd>
	
	<dt>${3:Definition title}</dt>
	<dd>${4:Definition description}</dd>
	
</dl>]]></text>
		<syntax-context>html, html *</syntax-context>
		<text-trigger><![CDATA[<dl>]]></text-trigger>
	</snippet>
	
</action-recipes>